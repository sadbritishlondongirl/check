  "shortcuts": [
    {
      "name": "Sign In",
      "short_name": "Login",
      "description": "Sign in to your OneID account",
      "url": "/?screen=login",
      "icons": [
        {
          "src": "assets/icons/shortcut-login.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Access your security dashboard",
      "url": "/?screen=dashboard",
      "icons": [
        {
          "src": "assets/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "assets/screenshots/desktop-login.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "OneID Login Screen"
    },
    {
      "src": "assets/screenshots/mobile-dashboard.png",
      "sizes": "360x640",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Security Dashboard"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "scope_extensions": [
    {
      "origin": "https://oneid.obscura.com"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+oneid",
      "url": "/?action=auth&data=%s"
    }
  ]
